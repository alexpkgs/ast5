---
import "../styles/global.css";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/jpg" href="https://avatars.githubusercontent.com/u/68964499?s=400&u=a1223442ad941c5fb99299f5f899e7582c08606f&v=4" />

    <title>{title}</title>
    <link
        rel="sitemap"
        type="application/xml"
        title="Sitemap"
        href="/sitemap-index.xml"
    />
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Favicons -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <script defer src="https://unpkg.com/@phosphor-icons/web"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <meta
        http-equiv="Content-Security-Policy"
        content="default-src * self blob: data: gap:; style-src * self 'unsafe-inline' blob: data: gap:; script-src * 'self' 'unsafe-eval' 'unsafe-inline' blob: data: gap:; object-src * 'self' blob: data: gap:; img-src * self 'unsafe-inline' blob: data: gap:; connect-src self * 'unsafe-inline' blob: data: gap:; frame-src * self blob: data: gap:;"
    />
</head>
<body class="bg-bg overflow-x-hidden">
    <slot />
    <div class="flex w-full my-4 justify-center">
        <div
            class="md:w-2/3 text-bright py-4 px-4 md:px-6 w-full flex flex-col items-center justify-center lg:w-1/2"
        >
            <p class="text-center my-2 md:my-0">
                ( っ˶´ ˘ `)っ <a href="https://astro.build" class="underline">built with astro</a>
            </p>
            <p class="text-center">
                <a
                    href="https://astro.build"
                    target="_blank"
                    class="underline text-fg"></a>
            </p>
        </div>
    </div>
</body>
<style is:global>
    :root {
        --tc-padding: 2em;
        --tc-border-color: #cfd9de;
        --tc-background-color: #000;
    }

    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: Geist;
    }
    *::-webkit-scrollbar {
        width: 15px;
        background: #090909;
    }

    *::-webkit-scrollbar-thumb {
        background-color: #222;
        border-radius: 3px;
    }

    @font-face {
        font-family: "Geist";
        src: url("/fonts/Geist-Regular.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "Geist Light";
        src: url("/fonts/Geist-Light.ttf") format("truetype");
        font-weight: lighter;
        font-style: normal;
        font-display: swap;
    }

    @font-face {
        font-family: "Iosevka";
        src: url("/fonts/Iosevka.ttf") format("truetype");
        font-weight: normal;
        font-style: normal;
        font-display: swap;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
        body {
            font-size: 14px; /* Adjust base font size */
        }

        .flex {
            flex-direction: column; /* Stack elements vertically */
            align-items: center; /* Center align items */
        }

        .md:w-2/3 {
            width: 90%; /* Make the container wider on mobile */
        }

        .text-bright {
            text-align: center; /* Center text on smaller screens */
        }
    }
</style>
</html>
